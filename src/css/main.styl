html, body
    height 100%
    margin 0
    padding 0

.css3color, .customColor
    position absolute
    top 0
    bottom 0
    width 50%
    height 100%
    font-size 32px
    font-family Verdana, Geneva, Arial, Helvetica, sans-serif
    text-align center
    transition background-color 1s


.css3color
    left 50%
    right 0

.customColor
    left 0
    right 50%

.wrapper
    width 100%
    height 100%


.menu
    width 100%
    height 100%
    padding 0
    margin 0
    position absolute
    left 0
    top 0


.menu-item
    display inline-block
    vertical-align middle

.menu-item_hidden
    height 100%
    width 0px
    padding 0


.content
    width 96%

.text
    width 200px
    margin 0 auto
    text-align center
    font-size 24px
    font-family Verdana, Geneva, Arial, Helvetica, sans-serif
//  -webkit-filter invert()

.bigger-text
    font-size 32px

.input
    width 100%
    border none
    margin 0
    padding 0
    font-size 32px
    text-align center
    vertical-align middle
    background-color transparent

.input:focus
    color #000!important
    background-color #fff

.colorValue
    margin-top 32px
section
    position relative
    z-index 10
.transparent-bg
    background-color rgba(0, 0, 0, 0.1)
    background-image linear-gradient(45deg, rgba(0,0,0,0.3) 25%, transparent 25%, transparent 75%, rgba(0,0,0,0.3) 75%, rgba(0,0,0,0.3)),
        linear-gradient(45deg, rgba(0,0,0,0.3) 25%, transparent 25%, transparent 75%, rgba(0,0,0,0.3) 75%, rgba(0,0,0,0.3));
    background-image -webkit-linear-gradient(45deg, rgba(0,0,0,0.3) 25%, transparent 25%, transparent 75%, rgba(0,0,0,0.3) 75%, rgba(0,0,0,0.3)),
        -webkit-linear-gradient(45deg, rgba(0,0,0,0.3) 25%, transparent 25%, transparent 75%, rgba(0,0,0,0.3) 75%, rgba(0,0,0,0.3));
    background-size 60px 60px;
    background-position 0 0, 30px 30px
